<!DOCTYPE html>
<html>
  <head>
    <title>Academic Demotivator</title>
    
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-theme.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script type="text/javascript" data-main="/javascripts/insult.main.js" src="/javascripts/require.min.js"></script>

  </head>
  <body>
  	

		<div class="container">
			<div class="text-center">
    		<h1>Academic Demotivator - login</h1>
    	</div>

    	<div>
        <form action="/login" method="post" role="form" class="form-horizontal">
          
          <div class="form-group">
            <label class="control-label col-lg-1">Username</label>
            <div class="col-lg-5">
              <input type="text" name="username" class="form-control" placeholder="username" />
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-lg-1">Password</label>
            <div class="col-lg-5">
              <input type="password" name="password" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-1 col-lg-5">
              <input type="submit" value="Submit" name="submit" class="form-control" placeholder="username"/>
            </div>
          </div>

        </form>  		
    	</div>
    </div>
  </body>
</html>